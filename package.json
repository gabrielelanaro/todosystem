{
  "name": "todosystem",
  "version": "1.0.0",
  "description": "Todo system for task management with CLI and MCP integration",
  "main": "dist/cli.js",
  "type": "module",
  "bin": {
    "todosystem": "./dist/cli.js"
  },
  "files": [
    "dist/",
    "src/",
    "templates/",
    "README.md",
    "tsconfig.json"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "start:mcp": "npm run build && node dist/todosystem.mcp",
    "start:cli": "npm run build && node dist/cli.js",
    "dev": "npm run build && node --watch dist/cli.js",
    "clean": "rm -rf dist",
    "test": "npm run build && node dist/test.js",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "boxen": "^8.0.1",
    "cli-table3": "^0.6.3",
    "inquirer": "^10.0.0",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "mcp",
    "claude-code",
    "cursor",
    "todo",
    "task-management",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.0.3",
    "@types/inquirer": "^9.0.0",
    "ts-node": "^10.9.2"
  }
}
